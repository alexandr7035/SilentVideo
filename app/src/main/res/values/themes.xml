<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SilentVideo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_600</item>
        <item name="colorSecondaryVariant">@color/purple_600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>

        <!-- Custom attributes -->
        <item name="colorToolbarTitle">@color/white</item>
        <item name="colorPrimaryButton">@color/purple_500</item>
        <item name="colorPrimaryButtonPressed">@color/purple_600</item>

        <item name="toolbarStyle">@style/MyToolbarStyle</item>

        <item name="actionOverflowMenuStyle">@style/popupOverflowMenu</item>

        <!-- Fixes an issue with non-visible shadows-->
        <item name="android:spotShadowAlpha">0.4</item>

        <item name="snackbarStyle">@style/snackbarStyle</item>

   </style>

    <style name="MyToolbarStyle" parent="Theme.SilentVideo">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="popupOverflowMenu" parent="Widget.AppCompat.Light.PopupMenu.Overflow" >
        <item name="android:textColorSecondary">#000000</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="snackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="elevation">2dp</item>
    </style>

</resources>